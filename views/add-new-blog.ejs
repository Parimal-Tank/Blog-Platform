<!DOCTYPE html>
<html lang="en"> 
<head>
    <title>Blog Admin Portal  This is All Blog Page</title>
    
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <meta name="description" content="Portal - Bootstrap 5 Admin Dashboard Template For Developers">
    <meta name="author" content="Xiaoying Riley at 3rd Wave Media">    
    <link rel="shortcut icon" href="favicon.ico"> 
    
    <!-- FontAwesome JS-->
    <script defer src="../../public/plugins/fontawesome/js/all.min.js"></script>
    
    <!-- App CSS -->  
    <link id="theme-style" rel="stylesheet" href="../public/css/style.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</head> 

<body>  
    <header class="app-header fixed-top">
    <%- include('partials/nav.ejs') -%>
    <%- include('partials/menubar.ejs') -%>
    </header>
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
            
            <h1 class="app-page-title mt-5">Add New Blog</h1>

            <!-- <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Hello Admin!</strong> This Title must be a 3+ long
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div> -->

              <% if(typeof alert != 'undefined') { %>
                <% alert.forEach(function(error) { %>
                    <div class="alert alert-warning alert-dismissible fade show" id="btn" role="alert">
                        <%= error.msg %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="history.back()">
                            <!-- <button type="button" class="close" data-dismiss="alert" aria-label="Close"> -->
                          <span aria-hidden="true">x</span>
                        </button>
                      </div>
                <% }) %>
            <% } %>

            <!-- method="post" action="/blog/addblog" -->
            <form method="post" action="/blog/addblog" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="exampleInputEmail1">Blog Title</label>
                 
                  <input type="text" class="form-control" name ="title" minlength="3" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter blog title" required value="">

                  <!-- <small id="#" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                </div>

                <% if (typeof alert != 'undefined'){%>
                    <div></div>
                <% }else{ %>
                        <label class="mt-4">Category</label>
                        <select class="form-select mb-3" name="categorys">
                            <!-- <option selected require>Select Category</option> -->
                            <% for(let i=0 ; i< category.length ; i++) { %> 
                                <option  value="<%= category[i].categorys %>"><%= category[i].categorys %></option>
                             <% } %>
                        </select>
                 <% }%>
                
                <label >Description</label>
                <textarea id="default" class="mt-4" name="description"></textarea>

                <div class="form-group mt-4">
                    <label for="exampleFormControlFile1">Select Image</label>
                    <input type="file" class="form-control-file" id="exampleFormControlFile1" name="photo">
                </div>

                <button type="submit" class="btn btn-primary mt-4">Submit</button>
              </form>
            
        </div><!--//container-fluid-->
    </div><!--//app-content-->


    <!-- TinyMCA Text Editor Script -->
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        tinymce.init({
                selector: 'textarea#default'
        });
    </script>

</body>

</html>